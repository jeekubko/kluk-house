<%= form_with(model: exercise_plan, class: "contents") do |form| %>
  <% if exercise_plan.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(exercise_plan.errors.count, "error") %> prohibited this exercise_plan from being saved:</h2>

      <ul class="list-disc ml-6">
        <% exercise_plan.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": exercise_plan.errors[:name].none?, "border-red-400 focus:outline-red-600": exercise_plan.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": exercise_plan.errors[:description].none?, "border-red-400 focus:outline-red-600": exercise_plan.errors[:description].any?}] %>
  </div>

  <h3>Items</h3>
  <div id="items-wrapper">
    <%= form.fields_for :exercise_plan_items do |item| %>
      <div class="nested-item" style="margin-bottom: 1rem; border-bottom: 1px solid #ddd; padding-bottom: .75rem;">
        <div>
          <%= item.label :exercise_id, "Exercise" %>
          <%= item.collection_select :exercise_id, Exercise.all, :id, :name, include_blank: true %>
        </div>
        <div>
          <%= item.label :sets %>
          <%= item.number_field :sets %>
          <%= item.label :reps %>
          <%= item.number_field :reps %>
          <%= item.label :weight %>
          <%= item.number_field :weight, step: 0.5 %>
        </div>
        <div>
          <%= item.label :note %><br>
          <%= item.text_area :note, rows: 2 %>
        </div>

        <!-- Server-side removal: checking this will mark the nested record for destruction on submit -->
        <div>
          <label>
            <%= item.check_box :_destroy %> Remove this item
          </label>
        </div>
      </div>
    <% end %>
  </div>

  <div class="inline">
    <%= form.submit "Add item", name: "add_item" %>
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
