<div class="bg-white rounded-2xl shadow-sm border border-yellow-100 p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-extrabold text-yellow-900">
        ðŸ”¥ Most popular exercise
      </h2>

      <%= link_to "View all", exercises_path, class: "text-sm font-semibold text-yellow-900 hover:underline" %>
    </div>

    <% popular = Exercise.most_popular(1) %>

    <% if popular.any? %>
      <% popular.each do |exercise| %>
        <div class="flex items-center justify-between bg-yellow-50 rounded-xl p-4 border border-yellow-100">
          <div>
            <p class="font-semibold text-yellow-900">
              <%= exercise.name %>
            </p>

            <p class="text-sm text-yellow-800">
              <%= exercise.muscle_group.to_s.humanize %>
            </p>
          </div>

          <%= link_to "View", exercise_path(exercise), class: "rounded-lg px-4 py-2 bg-yellow-100 hover:bg-yellow-200 text-yellow-900 font-semibold transition cursor-pointer" %>
        </div>
      <% end %>
    <% else %>
      <p class="text-yellow-800 italic">
        No popular exercises yet.
      </p>
    <% end %>
  </div>
