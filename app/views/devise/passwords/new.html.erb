<div class="min-h-[calc(100vh-6rem)] flex items-center justify-center px-4 py-10">
  <div class="w-full max-w-md">
    <div class="rounded-2xl border border-yellow-100 bg-yellow-50/70 shadow-sm p-6 sm:p-8">
      <div class="mb-6">
        <h2 class="text-2xl font-extrabold text-yellow-900">Forgot your password?</h2>
        <p class="mt-2 text-sm text-yellow-800">
          Enter your email and weâ€™ll send you reset instructions.
        </p>
      </div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-5" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, class: "block text-sm font-semibold text-yellow-900" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "you@example.com", class: "mt-2 block w-full rounded-xl border border-yellow-200 bg-white px-3 py-2 shadow-sm focus:border-green-500 focus:ring-green-500" %>
        </div>

        <div class="pt-1">
          <%= f.submit "Send reset instructions", class: "w-full rounded-xl bg-yellow-400 px-4 py-2.5 font-semibold text-yellow-950 shadow-sm hover:bg-yellow-300 transition" %>
        </div>
      <% end %>

      <div class="mt-6">
        <div class="h-px bg-yellow-100"></div>
        <div class="mt-4 text-sm text-yellow-800">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
