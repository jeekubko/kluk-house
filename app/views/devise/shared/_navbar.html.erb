<nav class="bg-yellow-400 shadow-sm backdrop-blur border-b border-yellow-400">
  <div class="container mx-auto px-5 h-16 flex items-center justify-between">
    <%= link_to root_path, class: "flex items-center gap-3" do %>
      <%= image_tag "logo.png", alt: "KľukHouse", class: "h-11 w-auto" %>
      <span class="font-extrabold text-lg text-yellow-900 tracking-tight hidden sm:block">
        KľukHouse
      </span>
    <% end %>

    <div class="flex items-center gap-2">
      <%= link_to "Exercises", exercises_path,
        class: "px-4 py-2 rounded-lg font-semibold text-yellow-900 hover:bg-yellow-300 transition cursor-pointer" %>

      <% if user_signed_in? %>
        <%= link_to "Plans", exercise_plans_path,
          class: "px-4 py-2 rounded-lg font-semibold text-yellow-900 hover:bg-yellow-300 transition cursor-pointer" %>

        <%= link_to "Profile", profile_path,
          class: "px-4 py-2 rounded-lg font-semibold text-yellow-900 hover:bg-yellow-300 transition cursor-pointer" %>

        <%= button_to "Log out", destroy_user_session_path, method: :delete,
          form_class: "inline",
          class: "px-4 py-2 rounded-lg bg-yellow-900 text-yellow-50 font-semibold hover:bg-yellow-950 transition cursor-pointer" %>
      <% else %>
        <%= link_to "Log in", new_user_session_path,
          class: "px-4 py-2 rounded-lg font-semibold text-yellow-900 hover:bg-yellow-300 transition cursor-pointer" %>

        <%= link_to "Sign up", new_user_registration_path,
          class: "px-4 py-2 rounded-lg bg-green-500 text-white font-semibold hover:bg-green-600 transition cursor-pointer" %>
      <% end %>
    </div>
  </div>
</nav>
