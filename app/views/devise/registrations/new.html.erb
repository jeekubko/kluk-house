<main class="flex-1 flex flex-col items-center justify-center px-4">
  <div class="mb-6 text-6xl">ğŸ™ŠğŸŒğŸ’</div>
  <h1 class="text-3xl font-extrabold text-yellow-900 mb-4">Join KÄ¾ukHouse!</h1>
  <p class="text-yellow-800 mb-8">Create your account and swing into workouts ğŸµ</p>
  <div class="bg-white rounded-2xl shadow-lg w-full max-w-md p-6">


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'space-y-4' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: 'text-yellow-800 mb-8' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full rounded-lg border border-yellow-300 px-3 py-2' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'text-yellow-800 mb-8' %>
    <% if @minimum_password_length %>
      <em class="text-yellow-800 mb-8">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'w-full rounded-lg border border-yellow-300 px-3 py-2' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'text-yellow-800 mb-8' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full rounded-lg border border-yellow-300 px-3 py-2' %>
  </div>

  <div class="field">
    <%= f.label :given_name, class: 'text-yellow-800 mb-8' %>
    <%= f.text_field :given_name, class: 'w-full rounded-lg border border-yellow-300 px-3 py-2' %>
  </div>

  <div class="field">
    <%= f.label :family_name, class: 'text-yellow-800 mb-8' %>
    <%= f.text_field :family_name, class: 'w-full rounded-lg border border-yellow-300 px-3 py-2' %>
  </div>

  <div class="field">
    <%= f.label :height, "Height (cm)", class: 'text-yellow-800 mb-8' %>
    <%= f.number_field :height, class: 'w-full rounded-lg border border-yellow-300 px-3 py-2' %>
  </div>

  <div class="field">
    <%= f.label :weight, "Weight (kg)", class: 'text-yellow-800 mb-8' %>
    <%= f.number_field :weight, step: 0.01, class: 'w-full rounded-lg border border-yellow-300 px-3 py-2' %>
  </div>

  <div class="field">
    <%= f.label :avatar, "Profile image", class: 'text-yellow-800 mb-8' %>
    <%= f.file_field :avatar, accept: "image/*" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up ğŸŒ", class: 'w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded-lg shadow-lg' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

