<main class="flex-1 flex flex-col items-center justify-center px-4">
  <!-- Monkey Illustration -->
  <div class="mb-6 text-6xl"></div>
  <h1 class="text-3xl font-extrabold text-yellow-900 mb-4">
    Welcome back to KÄ¾ukHouse!
  </h1>
  <p class="text-yellow-800 mb-8">Log in, build your plan, and go bananas</p>
  <!-- Login Card -->
  <div class="bg-white rounded-2xl shadow-lg w-full max-w-md p-6">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-4' }) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'block text-sm font-semibold text-yellow-900' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mt-1 block w-full rounded-lg border border-yellow-300 focus:ring-green-500 focus:border-green-500 px-3 py-2' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'block text-sm font-semibold text-yellow-900' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'mt-1 block w-full rounded-lg border border-yellow-300 focus:ring-green-500 focus:border-green-500 px-3 py-2' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center gap-2 text-sm">
          <%= f.check_box :remember_me, class: "rounded border-yellow-300 text-green-600 focus:ring-green-500 cursor-pointer" %>
          <%= f.label :remember_me, class: "text-yellow-900 cursor-pointer select-none" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: 'w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded-lg shadow-lg cursor-pointer transition transform hover:scale-[1.01]' %>
      </div>
      <!-- Divider -->
      <div class="flex items-center my-6">
        <div class="flex-grow border-t border-yellow-300"></div>
        <span class="mx-3 text-yellow-800 text-sm">or</span>
        <div class="flex-grow border-t border-yellow-300"></div>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>

  </div>
</main>
