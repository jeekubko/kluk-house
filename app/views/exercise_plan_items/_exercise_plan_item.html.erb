
<div id="<%= dom_id exercise_plan_item %>"
     class="flex items-center justify-between gap-4 py-3 px-4
            rounded-xl bg-yellow-50 border border-yellow-100">

  <!-- Left: Exercise name -->
  <div class="font-semibold text-yellow-900 truncate">
    <%= exercise_plan_item.exercise.name %>
  </div>

  <!-- Middle: Sets x Reps -->
  <div class="text-sm text-yellow-800 whitespace-nowrap">
    <span class="font-semibold"><%= exercise_plan_item.sets %></span>
    Ã—
    <span class="font-semibold"><%= exercise_plan_item.reps %></span>
  </div>

  <!-- Right: Weight / Note -->
  <div class="text-sm text-yellow-700 text-right whitespace-nowrap">
    <% if exercise_plan_item.weight.present? %>
      <%= exercise_plan_item.weight %> kg
    <% else %>
      Bodyweight
    <% end %>
  </div>

</div>
