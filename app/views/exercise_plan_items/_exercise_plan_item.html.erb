<div id="<%= dom_id exercise_plan_item %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Exercise:</strong>
    <%= exercise_plan_item.exercise.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Sets:</strong>
    <%= exercise_plan_item.sets %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Reps:</strong>
    <%= exercise_plan_item.reps %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Weight:</strong>
    <%= exercise_plan_item.weight %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Note:</strong>
    <%= exercise_plan_item.note %>
  </div>
</div>
