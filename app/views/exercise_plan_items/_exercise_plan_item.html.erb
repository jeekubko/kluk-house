<div id="<%= dom_id exercise_plan_item %>"
     class="relative flex items-center justify-between gap-4 py-3 px-4
            rounded-xl bg-yellow-50 border border-yellow-100">

  <!-- Left: Exercise name -->
  <div class="font-semibold text-yellow-900 truncate pr-6">
    <%= exercise_plan_item.exercise&.name %>
  </div>

  <!-- Middle: Sets × Reps (ABSOLUTE CENTER) -->
  <div class="absolute left-1/2 -translate-x-1/2 text-sm text-yellow-800 whitespace-nowrap tabular-nums">
    <span class="inline-block w-6 text-right font-semibold"><%= exercise_plan_item.sets %></span>
    <span class="inline-block w-4 text-center opacity-70">×</span>
    <span class="inline-block w-6 text-left font-semibold"><%= exercise_plan_item.reps %></span>
  </div>

  <!-- Right: Weight -->
  <div class="text-sm text-yellow-700 text-right whitespace-nowrap truncate pl-24">
    <% if exercise_plan_item.weight&.nonzero? %>
      <%= exercise_plan_item.weight %> kg
    <% else %>
      Bodyweight
    <% end %>
  </div>

</div>
