<%= form_with(model: exercise_plan_item, class: "contents") do |form| %>
  <% if exercise_plan_item.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(exercise_plan_item.errors.count, "error") %> prohibited this exercise_plan_item from being saved:</h2>

      <ul class="list-disc ml-6">
        <% exercise_plan_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :exercise_plan_id %>
    <%= form.text_field :exercise_plan_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": exercise_plan_item.errors[:exercise_plan_id].none?, "border-red-400 focus:outline-red-600": exercise_plan_item.errors[:exercise_plan_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :exercise_id %>
    <%= form.text_field :exercise_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": exercise_plan_item.errors[:exercise_id].none?, "border-red-400 focus:outline-red-600": exercise_plan_item.errors[:exercise_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :sets %>
    <%= form.number_field :sets, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": exercise_plan_item.errors[:sets].none?, "border-red-400 focus:outline-red-600": exercise_plan_item.errors[:sets].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :reps %>
    <%= form.number_field :reps, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": exercise_plan_item.errors[:reps].none?, "border-red-400 focus:outline-red-600": exercise_plan_item.errors[:reps].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :weight %>
    <%= form.text_field :weight, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": exercise_plan_item.errors[:weight].none?, "border-red-400 focus:outline-red-600": exercise_plan_item.errors[:weight].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :note %>
    <%= form.text_area :note, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": exercise_plan_item.errors[:note].none?, "border-red-400 focus:outline-red-600": exercise_plan_item.errors[:note].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
