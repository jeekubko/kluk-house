<%= form_with(model: exercise, class: "space-y-5") do |form| %>
  <% if exercise.errors.any? %>
    <div id="error_explanation" class="rounded-xl bg-red-100 text-red-800 px-4 py-3 border border-red-200">
      <h2 class="font-bold">
        <%= pluralize(exercise.errors.count, "error") %> prohibited this exercise from being saved:
      </h2>

      <ul class="list-disc ml-6 mt-2">
        <% exercise.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Name -->
  <div>
    <%= form.label :name, class: "block text-sm font-semibold text-yellow-900" %>
    <%= form.text_field :name,
      class: [
        "mt-2 block w-full rounded-lg border px-3 py-2 shadow-sm focus:ring-green-500 focus:border-green-500",
        exercise.errors[:name].any? ? "border-red-400" : "border-yellow-300"
      ] %>
  </div>

  <!-- Description -->
  <div>
    <%= form.label :description, class: "block text-sm font-semibold text-yellow-900" %>
    <%= form.text_area :description, rows: 4,
      class: [
        "mt-2 block w-full rounded-lg border px-3 py-2 shadow-sm focus:ring-green-500 focus:border-green-500",
        exercise.errors[:description].any? ? "border-red-400" : "border-yellow-300"
      ] %>
  </div>

  <!-- Muscle group -->
  <div>
    <%= form.label :muscle_group, class: "block text-sm font-semibold text-yellow-900" %>
    <%= form.select :muscle_group,
      Exercise.muscle_groups.keys.map { |k| [k.humanize, k] },
      {},
      class: [
        "mt-2 block w-full rounded-lg border px-3 py-2 shadow-sm bg-white focus:ring-green-500 focus:border-green-500",
        exercise.errors[:muscle_group].any? ? "border-red-400" : "border-yellow-300"
      ] %>
  </div>

  <!-- Actions -->
  <div class="flex flex-col sm:flex-row gap-2">
    <%= form.submit "Save exercise",
      class: "w-full sm:w-auto rounded-lg px-5 py-2.5 bg-green-500 hover:bg-green-600 text-white font-semibold shadow-sm transition cursor-pointer" %>

    <%= link_to "Cancel", exercises_path,
      class: "w-full sm:w-auto text-center rounded-lg px-5 py-2.5 bg-yellow-100 text-yellow-900 font-semibold hover:bg-yellow-200 transition cursor-pointer" %>
  </div>
<% end %>
