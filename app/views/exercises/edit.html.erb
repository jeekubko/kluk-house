<% content_for :title, "Edit exercise" %>

<div class="w-full max-w-3xl mx-auto">

  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-3 mb-6">
    <div>
      <p class="text-sm text-yellow-800">Edit exercise</p>
      <h1 class="text-4xl font-extrabold text-yellow-900">
        <%= @exercise.name.presence || "Exercise" %>
      </h1>
      <p class="mt-2 text-yellow-800">Update exercise details ğŸ› ï¸</p>
    </div>

    <div class="flex flex-col sm:flex-row gap-2">
      <%= link_to "View", @exercise,
        class: "text-center rounded-lg px-4 py-2 bg-yellow-100 text-yellow-900 font-semibold hover:bg-yellow-200 transition cursor-pointer" %>

      <%= link_to "Back", exercises_path,
        class: "text-center rounded-lg px-4 py-2 bg-gray-100 text-gray-800 font-semibold hover:bg-gray-200 transition cursor-pointer" %>
    </div>
  </div>

  <!-- Form Card -->
  <div class="bg-white rounded-2xl shadow-sm border border-yellow-100 p-6">
    <%= render "form", exercise: @exercise %>
  </div>

  <!-- Bottom actions (mobile) -->
  <div class="mt-6 sm:hidden flex flex-col gap-2">
    <%= link_to "View exercise", @exercise,
      class: "text-center rounded-lg px-4 py-2 bg-yellow-100 text-yellow-900 font-semibold hover:bg-yellow-200 transition cursor-pointer" %>

    <%= link_to "Back to exercises", exercises_path,
      class: "text-center rounded-lg px-4 py-2 bg-gray-100 text-gray-800 font-semibold hover:bg-gray-200 transition cursor-pointer" %>
  </div>

</div>
